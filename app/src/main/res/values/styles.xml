        <item name="android:textColorHint">#A09E9E</item>
        <item name="android:windowTranslucentStatus">true</item>

        // default background color
        <item name="colorPrimary">@color/app_color</item>

        // default text color
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#F0EFEF</item>
        <item name="colorSecondary">#AF2C2C</item>
        <item name="colorSecondaryVariant">#E33939</item>
